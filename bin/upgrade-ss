#!/usr/bin/env php
<?php


$paths = [
    __DIR__ . "/../../autoload.php",
    __DIR__ . "/../vendor/autoload.php",
    __DIR__ . "/../../vendor/autoload.php",
    __DIR__ . "/../../../vendor/autoload.php",
    __DIR__ . "/../../../../vendor/autoload.php",
];

foreach ($paths as $path) {
    if ($path = realpath($path)) {
        require_once $path;
        break;
    }
}

use TheHilkiah\SSUpgrader\Apps\Application;

$app = new Application();

$commands = $app->getAllCommands();

foreach($commands as $cmd){
    $app->add(new $cmd);
}
$app->run();
