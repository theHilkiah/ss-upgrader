#!/usr/bin/env php
<?php

use SSUpgrade\Upgrader\Cmds\Command;
use SSUpgrade\Upgrader\Apps\Application;

if(!class_exists(Command::class) || !class_exists(Application::class)){
  if($myBinVendor = realpath(__DIR__."/../autoload.php")) require_once $myBinVendor;
  elseif($Vendor = realpath(__DIR__."/theHilkiah/autoload.php")) require_once $Vendor;
}

$app = new Application();

$commands = $app->getAllCommands();

foreach($commands as $cmd){
    $app->add(new $cmd);
}
$app->run();
