#!/usr/bin/env php
<?php

namespace SSUpgrade\Upgrader;

use SSUpgrade\Upgrader\Cmds\Command;
use SSUpgrade\Upgrader\Apps\Application;

if(!class_exists(Cmds\Command::class) || !class_exists(Apps\Application::class)){
  require_once realpath(__DIR__."/../autoload.php"))
}

$app = new Application();

$commands = $app->getAllCommands();

foreach($commands as $cmd){
    $app->add(new $cmd);
}
$app->run();
